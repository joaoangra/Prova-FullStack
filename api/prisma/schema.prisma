
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Perfil {
  id         Int          @id @default(autoincrement())
  perfil     String       @db.VarChar(255)
  usuarios   Usuario[]

  @@map("perfis")
}

model Usuario {
  id       Int    @id @default(autoincrement())
  senha    String @db.VarChar(255)
  perfilId Int    @map("perfil")
  perfil   Perfil @relation(fields: [perfilId], references: [id])
    comentarios Comentario[]

  @@map("usuarios")
}

model Equipamento {
  id          Int          @id @default(autoincrement())
  equipamento String       @db.VarChar(500)
  imagem      String?      @db.VarChar(255)
  descricao   String?      @db.Text
  ativo       Boolean      @default(true)
  data        DateTime     @default(now())
  comentarios Comentario[]

  @@map("equipamentos")
}

model Comentario {
  id            Int         @id @default(autoincrement())
  comentario    String      @db.Text
  equipamentoId Int         @map("equipamento")
  usuarioId     Int         @map("usuario")
  data          DateTime    @default(now())
  equipamento   Equipamento @relation(fields: [equipamentoId], references: [id], onDelete: Cascade)
  usuario       Usuario     @relation(fields: [usuarioId], references: [id])

  @@map("comentarios")
}
